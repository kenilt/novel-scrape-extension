{
    "name": "Novel scrape",
    "version": "1.0.0",
    "description": "Read the novel then save to file",
    "manifest_version": 3,
    "author": "Kenilt Nguyen",
    "permissions": [
        "scripting",
        "activeTab",
        "storage",
        "unlimitedStorage",
        "history"
    ],
    "host_permissions": [
       "<all_urls>"
    ],
    "content_scripts": [
       {
         "matches": ["<all_urls>"],
         "js": ["script.js"]
       }
     ],
    "background": {
        "service_worker": "background.js"
    },
    "action":{
        "default_popup": "index.html",
        "default_title": "Novel scrape"
    }
}